<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.sch.smktelkom_mlg.privateassignment.xirpl133.yourmovie.HelpFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvhelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Help"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/im2"
        android:layout_below="@+id/tv2"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/im1"
        android:layout_toRightOf="@+id/im1"
        android:text="You can choose this icon to see the popular movies of other users. You ca see it in offline mode or online mode" />

    <ImageView
        android:id="@+id/im1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv1"
        android:layout_marginTop="92dp"
        app:srcCompat="@drawable/ic_cloud_black_24dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/im1"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/im2"
        android:layout_toRightOf="@+id/im2"
        android:text="You can choose this icon to see the popular movies. Click it and you can see overview of movie that you click. You just can see it in online mode
        \n" />

    <ImageView
        android:id="@+id/im2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/im1"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/ic_list_black_24dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imghelp"
        android:layout_marginTop="49dp"
        android:text="       This application tell us about the popular movies in this year. You can access data of the movies with internet. If you in offline mode, you can't but you just can see the popular movies from other users of application.
        \n\n" />

    <ImageView
        android:id="@+id/imghelp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvhelp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/ic_live_help_black_24dp" />


</RelativeLayout>
